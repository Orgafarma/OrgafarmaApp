<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_indigo_500</item>
        <item name="colorPrimaryDark">@color/md_indigo_700</item>
        <item name="colorAccent">@color/md_orgafarma</item>
        <item name="colorControlHighlight">@color/md_indigo_500_25</item>
        <item name="android:windowBackground">@color/md_white_1000</item>

    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="dropdown">
        <item name="android:background">#fff</item>
    </style>

    <style name="verCotacaoStyleHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#e2000000</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/border_ver_cotacao_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="verCotacaoStyleItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#e2000000</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/border_ver_cotacao</item>
    </style>

    <style name="Base.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
